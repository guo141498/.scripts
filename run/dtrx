#!/usr/local/bin/scsh -s
!#

(if (null? command-line-arguments) (exit))

(define file (car command-line-arguments))

(define namelist
  (call-with-values (lambda () (parse-file-name file))
                    (lambda (path name ext) (list path name ext))
                    ))

(if (equal? ".zip" (caddr namelist))
  (let ((dirn (string-append (cwd) "/" (cadr namelist)))
        (absfile (resolve-file-name file (cwd)))
        )
     (run (mkdir ,dirn)) (chdir dirn)
     (run (,(expand-file-name "~/.scripts/.conv.py") ,absfile))  
   )
  (run (/bin/dtrx ,(car command-line-arguments)))
  )
